@using TradeMvc.Models
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:10px">
    <tr>
        <th>
            ID
        </th>
        <th>
            Category Name
        </th>
        <th>
            Delete
        </th>
        <th>
            Update
        </th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.CategoryId
            </td>
            <td>
                @k.CategoryName
            </td>
            <td><a href="@Url.Action("CategoryDelete", "Category", new { id=@k.CategoryId })" class="btn btn-success">Delete</a> </td>
            <td><a href="@Url.Action("CategoryBring", "Category", new { id=@k.CategoryId })" class="btn btn-primary">Update</a></td>
        </tr>

    }
</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">Category Add</a>