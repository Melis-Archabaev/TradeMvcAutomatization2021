@using TradeMvc.Models
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Mark</th>
        <th>Stock</th>
        <th>Buy Price</th>
        <th>Sale Price</th>
        <th>Category</th>
        <th>Image</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var u in Model)
    {
<tr>
    <td>@u.ProductId</td>
    <td>@u.ProductName</td>
    <td>@u.Mark</td>
    <td>@u.Stock</td>
    <td>@u.BuyPrice</td>
    <td>@u.SalePrice</td>
    <td>@u.Category.CategoryName</td>
    <td>@u.ProductImage</td>
    <td><a href="@Url.Action("ProductDelete", "Product", new { id=u.ProductId })" class="btn btn-danger">Delete</a></td>
    <td><a href="@Url.Action("ProductBring", "Product", new { id=u.ProductId })" class="btn btn-success">Update</a></td>
</tr>
    }
</table>
<a href="/Product/NewProduct/" class="btn btn-primary">New Product</a>
